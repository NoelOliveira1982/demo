<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.project.game.controllers.MenuController"
    stylesheets="@styles.css">

    <center>
        <VBox alignment="CENTER">
            <Text text="The Game" styleClass="title-text" />
            <ListView fx:id="roomList" prefWidth="200" prefHeight="300" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="createRoomButton" onAction="#handleCreateRoom" text="Create Room" />
        </HBox>
    </bottom>

</BorderPane>